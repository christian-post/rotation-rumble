<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
  <%- include('../partials/header'); %>
</header>

<main>
  <div class="jumbotron">
    <form action="/advanced-search/" method="post">
      <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1">Card Name</span>
        <input id="cardname" name="name" type="text" class="form-control" placeholder='Any words in the name, e.g., "Elf"' aria-describedby="basic-addon1">
      </div>

      <div class="input-group mb-3">
        <label class="input-group-text" for="cardtype">Card Type</label>
        <select class="form-select" id="cardtype" name="cardtype">
          <option value="">Any</option>
          <option value="Fighter">Fighter</option>
          <option value="Challenge">Challenge</option>
          <option value="Item">Item</option>
          <option value="Landscape">Landscape</option>
        </select>
      </div>

      <div class="input-group mb-3">

        <label class="input-group-text" for="inlineCheckbox1">Colors</label>

        <div class="form-check form-check-inline">
          <input class="form-check-input" type="checkbox" name="color" id="inlineCheckbox1" value="black">
          <label class="form-check-label" for="inlineCheckbox1">Black</label>
        </div>

        <div class="form-check form-check-inline">
          <input class="form-check-input" type="checkbox" name="color" id="inlineCheckbox2" value="blue">
          <label class="form-check-label" for="inlineCheckbox2">Blue</label>
        </div>

        <div class="form-check form-check-inline">
          <input class="form-check-input" type="checkbox" name="color" id="inlineCheckbox3" value="green">
          <label class="form-check-label" for="inlineCheckbox2">Green</label>
        </div>

        <div class="form-check form-check-inline">
          <input class="form-check-input" type="checkbox" name="color" id="inlineCheckbox4" value="red">
          <label class="form-check-label" for="inlineCheckbox2">Red</label>
        </div>

        <select class="form-select" name="color_compare">
          <option value="or">or</option>
          <option value="and">and</option>
        </select>

      </div>

      <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon6">Type</span>
        <input id="type" name="type" type="text" class="form-control" placeholder='Type 1 or 2' aria-describedby="basic-addon6">
      </div>

      <div class="input-group mb-3">
        <label class="input-group-text" for="dmg_compare_method">DMG</label>
        <select class="form-select" id="dmg_compare_method" name="dmg_compare_method">
          <option value="$eq">equal to</option>
          <option value="$lt">less than</option>
          <option value="$gt">greater than</option>
          <option value="$lte">less than or equal to</option>
          <option value="$gte">greater than or equal to</option>
          <option value="$not">not equal to</option>
        </select>
        <select class="form-select" id="dmg_compare" name="dmg">
          <option value="any" selected>any</option>
          <option value=""></option>
          <option value="0">0</option>
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
          <option value="6">6</option>
          <option value="7">7</option>
          <option value="8">8</option>
          <option value="9">9</option>
        </select>
      </div>

      <div class="input-group mb-3">
        <label class="input-group-text" for="def_compare_method">DEF</label>
        <select class="form-select" id="def_compare_method" name="def_compare_method">
          <option value="$eq">equal to</option>
          <option value="$lt">less than</option>
          <option value="$gt">greater than</option>
          <option value="$lte">less than or equal to</option>
          <option value="$gte">greater than or equal to</option>
          <option value="$not">not equal to</option>
        </select>
        <select class="form-select" id="def_compare" name="def">
          <option value="any" selected>any</option>
          <option value=""></option>
          <option value="0">0</option>
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
          <option value="6">6</option>
          <option value="7">7</option>
          <option value="8">8</option>
          <option value="9">9</option>
        </select>
      </div>

      <div class="input-group mb-3">
        <label class="input-group-text" for="DiceYes">Dice?</label>
        <div class="form-check form-check-inline" id="DiceYes">
          <input class="form-check-input" type="radio" name="dice" id="inlineRadio1" value="Yes">
          <label class="form-check-label" for="inlineRadio1">Yes</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="dice" id="inlineRadio2" value="No">
          <label class="form-check-label" for="inlineRadio2">No</label>
        </div>
      </div>

      <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon4">Effects or Steps</span>
        <input id="effectOrStep" name="effectOrStep" type="text" class="form-control" placeholder='Any words in the text, e.g., "Destroy".' aria-describedby="basic-addon4">
      </div>

      <input type="submit" value="Search with these values.">

    </form>
  </div>
</main>

<footer>
  <%- include('../partials/footer'); %>
</footer>

</body>
</html>