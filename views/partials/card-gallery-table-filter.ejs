<div class="gallery-header grid-item">
  <h2><%= locals.header %></h2>

  <script>
    const changeGalleryLayout = function(select) {
      if (select.value.length > 0) {
        // reload the page with different URL argument
        // TODO: hack!
        window.location.href = `/gallery?as=${select.value}&group=none`;
      }
    }

    const galleryGroupBy = function(select) {
      if (select.value.length > 0) {
        // reload the page with different URL argument
        // TODO: hack!
        window.location.href = `/gallery?as=images&group=${select.value}`;
      }
    }
  </script>

  <label for="display-as" class="header-selector">display as </label>
  <select name="display-as" id="display-as", onchange="changeGalleryLayout(this)">
    <option value=""></option>
    <option value="images" id="images">Images</option>
    <option value="table" id="table">Table</option>
    <option value="text" id="text">Text only</option>
  </select>

  <label for="group-by" class="header-selector">group by </label>
  <select name="group-by" id="group-by", onchange="galleryGroupBy(this)">
    <option value=""></option>
    <option value="none">None</option>
    <option value="set">Set</option>
  </select>
</div>